@using Web.Watch.Models;

@model PaymentInfomation

@{
    ViewBag.Title = "OrderSuccess";
}
<div class="container-fluid mt-2 mb-1">
    <div class="row">
        <div class="col-12">
            <div>
                <nav>
                    <ul class="breadcrumb m-0" style="display:inline-flex">
                        <li class="breadcrumb-item">
                            <a href="/">Trang chủ</a>
                        </li>
                        <li class="breadcrumb-item active">
                            Thông tin đặt hàng
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>


<div class="container-cart">
    <div class="row">
        <div class="col-md-12 text-center">
            <div class="mb-5">
                @if (Model.TransactionStatus == "00" && Model.ResponseCode == "00")
                {
                    <h3 style="color: #0b9e24;">Đặt hàng thành công</h3>
                }
                else
                {
                    Web.Watch.Service.OrderService orderService = new Web.Watch.Service.OrderService();
                    orderService.DeleteById(orderService.GetBySecretCode(MvcApplication.SC).Id);
                    <h3 class="text-danger">Đặt hàng không thành công</h3>
                }


                <hr />
                <div class="row justify-content-center">
                    @*<span>@Model.Amount</span>
                    <span>@Model.BankCode</span>
                    <span>@Model.CardType</span>
                    <span>@Model.TransactionStatus</span>*@
                    <div class="col-md-6" style="font-size:14px">
                        Cảm ơn quý khách hàng đã đặt hàng trên hệ thống T&TWatch.
                        Chúng tôi sẽ liên hệ tới quý khách hàng trong thời gian sớm nhất.
                        Cảm ơn quý khách!
                    </div>
                </div>
            </div>
            <div>
                <a href="/" class="btn btn-warning">Quay lại trang chủ</a>
            </div>
        </div>
    </div>
</div>
