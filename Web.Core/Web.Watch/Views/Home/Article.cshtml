@using Web.Core.Dto;
@model ArticleDto
@{
    List<ArticleDto> articles = (List<ArticleDto>)ViewData["articles"];
    ViewBag.Title = Model.Title;
}

<div class="container-fluid mt-2 mb-3">
    <div class="row">
        <div class="col-12">
            <div>
                <nav>
                    <ul class="breadcrumb m-0" style="display:inline-flex">
                        <li class="breadcrumb-item">
                            <a href="/">Trang chủ</a>
                        </li>
                        <li class="breadcrumb-item active">
                            Hỗ trợ khách hàng
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="container-cart">
    <div class="row">
        <div class="col-md-3" style="border-right:2px solid #dcdcdc">
            <h4>HỖ TRỢ KHÁCH HÀNG</h4>
            <hr />
            <div class="box-help">
                <ul>
                    @for (int i = 0; i < articles.Count; i++)
                    {
                        <li>
                            <a href="/bai-viet/@articles[i].Alias" class="item-name">@(i+1). @articles[i].Title</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
        <div class="col-md-9">
            <h4 class="title-border-left-right text-center">
                @Model.Title
            </h4>
            <div class="mt-3">
                @Html.Raw(Model.Description)
            </div>
        </div>
    </div>
</div>
