@using Web.Core.Dto;
@model UserDto
@{
    ViewBag.Title = "Thêm mới tài khoản quản trị";
    string error = (string)Session["error"];
    Session["error"] = null;
}

<script>
    $("#menu_user").addClass("menu_active");
</script>

<form id="formSubmit" action="/Administrator/User/Add" method="post">
    @Html.AntiForgeryToken()
    <section class="content">
        <div class="box box-primary">
            <div class="box-body">
                <div class="row">
                    @if (!string.IsNullOrWhiteSpace(error))
                    {
                        <div class="col-md-12" style="margin-bottom:10px">
                            <h4 class="required">@error</h4>
                        </div>
                    }
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Tên tài khoản <span class="required">(*)</span></label>
                            <input type="text" value="@Model.UserName" name="UserName" class="form-control input-sm" required />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Mật khẩu <span class="required">(*)</span></label>
                            <input type="password" value="@Model.Password" name="Password" class="form-control input-sm" required />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Họ và tên <span class="required">(*)</span></label>
                            <input type="text" value="@Model.FullName" name="FullName" class="form-control input-sm" required />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Số điện thoại</label>
                            <input type="text" value="@Model.Phone" name="Phone" class="form-control input-sm" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Ngày sinh</label>
                            <input type="text" value="@Model.Dob" name="Dob" class="form-control input-sm" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Email</label>
                            <input type="text" value="@Model.Email" name="Email" class="form-control input-sm" />
                        </div>
                    </div>

                    <div class="col-md-12 text-center">
                        <a href="/Administrator/User" class="btn btn-default">
                            Trở lại danh sách
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-save"></i>
                            Cập nhật
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>
