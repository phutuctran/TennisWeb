
@{
    Layout = null;
    string error = (string)Session["error"];
    Session["error"] = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Đăng nhập hệ thống</title>
    <link href="~/Areas/Administrator/Plugins/bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        .body-auth {
            background-image: url(/Resources/Images/bg-auth.jpg);
            background-repeat: no-repeat;
            font-size: 14px;
            min-height: 100%;
            position: absolute;
            width: 100%;
            padding-bottom: 20px;
        }

        .box-auth {
            max-width: 350px;
            margin: 0 auto;
            background: white;
            opacity: 0.95;
            margin-top: 80px;
            border-radius: 10px;
            box-shadow: 0 1px 10px 5px rgb(0 0 0 / 30%);
            padding: 15px 22px 20px;
        }
    </style>
</head>
<body>
    <div class="body-auth">
        <div class="box-auth">
            <div style="margin-bottom:20px">
                <h4>Đăng nhập trang quản trị</h4>

                @if (!string.IsNullOrWhiteSpace(error))
                {
                    <h5 style="color:red">@error</h5>
                }
            </div>
            <form action="/Administrator/Login" method="post">
                @Html.AntiForgeryToken()
                <div class="my-4">
                    <div class="form-group">
                        <input type="text" name="UserName" placeholder="Tên đăng nhập" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <input type="password" name="Password" class="form-control" placeholder="Mật khẩu" required>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block mb-4">Đăng nhập</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
